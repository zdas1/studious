<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="repair_page" name="Repair">
        <t t-call="website.layout">
            <div class="container">
                Welcome to the demo web page. Select repair option from menu bar to move to repair form
            </div>
        </t>
    </template>

    <record id="repair_thanks" model="website.page">
        <field name="name">Thanks</field>
        <field name="type">qweb</field>
        <field name="url">/repair/thanks</field>
        <field name="website_published">True</field>
        <field name="key">new_task.repair_thanks</field>
        <field name="arch" type="xml">
            <t name="Thanks" t-name="new_task.repair_thanks">
                <t t-call="website.layout">
                    <div id="wrap">
                        <div class="container">
                            <h1>Thankyou!</h1>
                            <div class="row">
                                <div class="col-lg-8">
                                    <div class="alert alert-success" role="status">
                                        The repair has been added successfully!!
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>            
                </t>
            </t>
        </field>
    </record>

</odoo>

